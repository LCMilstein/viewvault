# Copy this file to secrets.env and set values. Do NOT commit secrets.env.

# App secrets (REQUIRED for production — a random 32+ char string)
SECRET_KEY=change-me

# CORS origins (optional, comma-separated — defaults to ["*"] if unset)
# CORS_ORIGINS=https://app.viewvault.app,http://localhost:3000

# SQL debug logging (optional — set to "true" to log all SQL queries)
# SQL_ECHO=true

# Auth0 Authentication (Required)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_WEB_CLIENT_ID=your-web-client-id
AUTH0_MOBILE_CLIENT_ID=your-mobile-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.viewvault.app

# Legacy support (for backward compatibility)
AUTH0_CLIENT_ID=your-web-client-id

# Base URL for OAuth callbacks
BASE_URL=https://app.viewvault.app

# Social Provider Credentials (Required for OAuth)
# These are configured in Auth0 Dashboard, not directly in your app
# But you need them to set up the social connections in Auth0

# Google OAuth (for Auth0 Google connection)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# GitHub OAuth (for Auth0 GitHub connection)  
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Facebook OAuth (for Auth0 Facebook connection) - Optional
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Twitter OAuth (for Auth0 Twitter connection) - Optional
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# TMDB/OMDb
TMDB_API_KEY=
IMDB_API_KEY=

# Jellyfin (LAN URL recommended)
JELLYFIN_URL=http://192.168.1.211:8096
JELLYFIN_API_KEY=
JELLYFIN_USER_ID=

# Logging level (optional — DEBUG, INFO, WARNING, ERROR. Defaults to INFO)
# LOG_LEVEL=DEBUG
